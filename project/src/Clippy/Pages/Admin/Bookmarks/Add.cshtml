@page
@model Clippy.Pages.Admin.Bookmarks.AddModel
@{
    ViewData["Title"] = "Add Bookmark";
}

<div id="main">

    <section id="one">
        <div class="inner">
            <header class="major">
                <h1>Add Bookmark</h1>
            </header>
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="fields">
                    <div class="field">
                        <label for="name">URL *</label>
                        <input type="text" asp-for="BookmarkEntity.Url" />
                        <span asp-validation-for="BookmarkEntity.Url"></span>
                    </div>
                    <div class="field">
                        <label for="name">Title</label>
                        <input type="text" asp-for="BookmarkEntity.Title" />
                        <span asp-validation-for="BookmarkEntity.Title"></span>
                    </div>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="Add Bookmark" class="primary" /></li>
                    <li><a asp-page="Index" class="button">Back</a></li>
                </ul>
            </form>
        </div>
    </section>

</div>
