@page
@model Clippy.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<div id="main">

    <section id="one">
        <div class="inner">
            <header class="major">
                <h1>Users</h1>
            </header>
            <div class="table-wrapper">
                <table class="alt">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Username</th>
                            <th>Name</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model.Users) {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.Username</td>
                            <td>@user.Name</td>
                            <td><a asp-page="Details" asp-route-id="@user.Id">Details</a> <a asp-page="Edit" asp-route-id="@user.Id">Edit</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
                <ul class="actions">
                    <li><a asp-page="Add" class="button primary">Add</a></li>
                    <li><a asp-page="../Index" class="button">Back</a></li>
                </ul>
            </div>
        </div>
    </section>

</div>
