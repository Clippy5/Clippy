@page "{id:int}"
@model Clippy.Pages.Admin.Roles.DetailsModel
@{
    ViewData["Title"] = "Role Details";
}

<div id="main">

    <section id="one">
        <div class="inner">
            <header class="major">
                <h1>Role Details (Id: @Model.Role.Id)</h1>
            </header>
            <p><strong>Name:</strong> @Model.Role.Name</p>
            <hr>
            <ul class="actions">
                <li><a asp-page="Index" class="button">Back</a></li>
                <li><form method="Post"><button asp-page-handler="Delete" asp-route-id="@Model.Role.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button></form></li>
            </ul>
        </div>
    </section>

</div>
