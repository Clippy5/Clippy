@page
@model Clippy.Pages.Admin.Resources.AddModel
@{
    ViewData["Title"] = "Add Resource";
}

<div id="main">

    <section id="one">
        <div class="inner">
            <header class="major">
                <h1>Add Resource</h1>
            </header>
            <form method="post">
                <div asp-validation-summary="All"></div>
                <div class="fields">
                    <div class="field">
                        <label for="name">Title *</label>
                        <input type="text" asp-for="Resource.Title" />
                        <span asp-validation-for="Resource.Title"></span>
                    </div>
                    <div class="field">
                        <label for="name">Location *</label>
                        <input type="text" asp-for="Resource.Location" />
                        <span asp-validation-for="Resource.Location"></span>
                    </div>
                    <div class="field">
                        <label for="name">Media Type</label>
                        <input type="text" asp-for="Resource.MediaType" />
                        <span asp-validation-for="Resource.MediaType"></span>
                    </div>
                    <div class="field">
                        <label for="name">Image</label>
                        <input type="text" asp-for="Resource.Image" />
                        <span asp-validation-for="Resource.Image"></span>
                    </div>
                    <div class="field">
                        <label for="message">Description</label>
                        <textarea asp-for="Resource.Description" rows="6"></textarea>
                        <span asp-validation-for="Resource.Description"></span>
                    </div>
                </div>
                <ul class="actions">
                    <li><input type="submit" value="Add Resource" class="primary" /></li>
                    <li><a asp-page="Index" class="button">Back</a></li>
                </ul>
            </form>
        </div>
    </section>

</div>
