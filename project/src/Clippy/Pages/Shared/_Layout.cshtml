<!DOCTYPE HTML>
<html>

<head>
    <title>@ViewData["Title"] - Clippy</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="/css/main.css" />
    <script src="https://kit.fontawesome.com/af82b590e2.js" crossorigin="anonymous"></script>
</head>

<body>
    <div id="navbar">
        <a href="/" class="clippy-logo"><img src="/images/resources/logo.png"></a>
        <div class="nav-links">
            <a asp-page="Explore" class="nav-link" onclick="closeMobileMenu()">Explore</a>
            <a asp-page="Following" class="nav-link" onclick="closeMobileMenu()">Following</a>
        </div>
        <form class="searchbar">
            <input class="search" type="text" name="search-term" placeholder="Search" required>
        </form>
        <img src="/images/resources/add.png" class="add-icon">
        <img src="@Model.AvatarUrl" class="avatar" alt="Randy Rando">
        <button class="mobile-menu" onclick="handleClick()"><i class="fas fa-bars fa-lg"></i></button>
    </div>
    @RenderBody()
    <script src="~/js/main.js"></script>
</body>

</html>
